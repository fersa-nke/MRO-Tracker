{
  "expo": {
    "name": "MRO Tracker by Fersa Group",
    "slug": "mro-tracker-by-fersa-group",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./src/assets/images/app-icon.png",
    "splash": {
      "image": "./src/assets/images/splash-screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#384E63"
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera."
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mro-tracker.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#384E63"
      },
      "package": "com.mro_tracker.app"
    },
    "extra": {
      "eas": {
        "projectId": "84ea0753-0268-47ea-9a01-e5b2de792b67"
      }
    }
  }
}
